<h3>Create a New Event:</h3>

<form id="create-event-form" class="form new-event-form">
    <div class="form-group">
        <label for="event-name">Name</label>
        <input type="text" class="form-control" id="event-name" placeholder="Ice Festival">
    </div>
    <div class="form-group">
        <label for="event-desc">Description</label>
        <textarea class="form-control" id="event-desc" name="event-desc"></textarea>
    </div>
    <div class="form-group">
        <label for="event-guidelines">Guidelines</label>
        <textarea class="form-control" id="event-guidelines" name="event-guidelines"></textarea>
    </div>
    <div class="form-group">
        <label for="event-organizer">Organizer</label>
        <input type="text" class="form-control" id="event-organizer" placeholder="{{user.id}} - {{user.name}}" readonly>
    </div>
    <div class="form-group">
        <label for="event-time">Time</label>
        <input type="text" class="form-control" id="event-time" placeholder="3:00 PM">
    </div>
    <div class="form-group">
        <label for="event-date">Date</label>
        <input type="text" class="form-control" id="event-date" placeholder="2020-01-14">
    </div>
    <div class="form-group">
        <label for="event-address">Address</label>
        <input type="text" class="form-control" id="event-address"
            placeholder="27 King's College Cir, Toronto, ON M5S 1A1">
        <button id="search-btn" class="btn btn-primary">Search</button>
    </div>
    <div class="form-group">
        <button id="submit-btn" class="btn btn-primary">Create this Event</button>
    </div>
</form>



