<div class="text-center">
  <h2>{{name}}</h2>  
  <p>
    <button class="btn btn-primary">click here</button>
  </p>
</div>
  
<div class="row">
  <div class="col-md-6">
    <img id="uploaded-image" src="{{image.url}}" />
  </div>
  
  <div class="col-md-6">
    <h3>Event Information</h3>
    <form class="form new-event-form">
      <div class="form-group">
        <label for="event-name">Event Name: {{name}}</label>
      </div>
      <div class="form-group">
        <label for="event-description">Description: {{description}}</label>
      </div>
      <div class="form-group">
        <label for="event-guidelines">Guidelines: {{guidelines}}</label>
      </div>
      <div class="form-group">
        <label for="event-time">Time: {{time}}</label>
      </div>
      <div class="form-group">
        <label for="event-date">Date: {{date}}:</label>
      </div>
      <div class="form-group">
        <label for="event-address">Location: {{location_name}}</label>
      </div>
      <div class="form-group">
        <label for="event-organizer">Organizer: {{user.name}}</label>
      </div>
    </form>
  </div>
</div>